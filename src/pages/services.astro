---
import Layout from '../layouts/Layout.astro';
---
<Layout title="Services - Talent Display">
  <section class="section">
    <h1 class="title">Shërbimet Tona</h1>
    <p class="subtitle">Shërbimet që Talent Display ofron për studentët.</p>

    <ul class="services">
      <li>Ndërtim CV Profesionale</li>
      <li>Ndërtim Portfolio Modern</li>
      <li>Këshillim Karriere</li>
      <li>Lidhje me Punëdhënës</li>
      <li>Workshop për intervista</li>
    </ul>
  </section>

  <style>
    .section {
      padding: 80px 20px;
      text-align: center;
      background: linear-gradient(to bottom, #eef4ff, #ffffff);
    }

    .title {
      font-size: 48px;
      font-weight: 800;
      margin-bottom: 10px;
      background: linear-gradient(90deg, #004bff, #3b82ff);
      -webkit-background-clip: text;
      color: transparent;
      animation: fadeDown 0.7s ease-out;
    }

    .subtitle {
      font-size: 20px;
      opacity: 0.7;
      margin-bottom: 40px;
      animation: fadeUp 0.8s ease-out;
    }

    .services {
      max-width: 650px;
      margin: 0 auto;
      padding: 0;
      list-style: none;
    }

    .services li {
      background: #ffffff;
      margin: 14px 0;
      padding: 18px 24px;
      border-radius: 16px;
      font-size: 20px;
      font-weight: 500;
      border: 1px solid #e5e9ff;
      box-shadow: 0 6px 18px rgba(0, 60, 255, 0.08);
      transition: 0.25s ease;
      cursor: pointer;
    }

    .services li:hover {
      transform: translateY(-5px);
      box-shadow: 0 10px 25px rgba(0, 60, 255, 0.18);
      border-color: #3b82ff;
    }

    /* Animations */
    @keyframes fadeDown {
      from { opacity: 0; transform: translateY(-15px); }
      to { opacity: 1; transform: translateY(0); }
    }

    @keyframes fadeUp {
      from { opacity: 0; transform: translateY(20px); }
      to { opacity: 1; transform: translateY(0); }
    }
  </style>
</Layout>
