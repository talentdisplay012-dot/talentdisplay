      min-height: 100vh;
      margin: 0;
    }

    .jobs-section {
      padding: 80px 20px 40px 20px;
      background: linear-gradient(180deg, #ffffff00, #ebf1ff);
      animation: fadeIn 0.8s ease-in-out;
      border-radius: 0 0 24px 24px;
      box-shadow: 0 4px 32px rgba(30,60,240,0.06);
      margin-bottom: 35px;
    }

    .title {
      font-size: 46px;
      font-weight: 900;
      color: #0d1a2d;
      margin-bottom: 12px;
      text-align: center;
      letter-spacing: -1px;
    }

    .subtitle {
      font-size: 20px;
      color: #34465b;
      margin-bottom: 50px;
      text-align: center;
      line-height: 1.5;
      max-width: 580px;
      margin-left: auto;
      margin-right: auto;
    }

    .jobs-container {
      max-width: 1050px;
      margin: 0 auto;
    }

    .job-category {
      margin-bottom: 65px;
      padding-top: 6px;
    }

    .category-title {
      font-size: 27px;
      font-weight: 800;
      color: #1552f7;
      margin-bottom: 30px;
      padding-left: 19px;
      border-left: 5px solid #1552f7;
      display: flex;
      align-items: center;
      gap: 10px;
      background: #eef7ff;
      border-radius: 6px;
    }

    .job-card {
      background: #ffffff;
      padding: 30px 28px 22px 28px;
      border-radius: 18px;
      box-shadow: 0 4px 19px rgba(0, 11, 60, 0.06);
      border-left: 6px solid #3b80ff;
      margin-bottom: 23px;
      transition: box-shadow 0.28s, border-color 0.28s, transform 0.2s;
      position: relative;
      overflow: hidden;
    }
    .job-card:hover {
      box-shadow: 0 10px 27px rgba(0, 72, 255, 0.18);
      border-color: #0d1a2d;
      transform: translateY(-4px) scale(1.03);
      background: #f6faff;
    }

    .job-title {
      font-size: 21px;
      font-weight: 800;
      color: #1552f7;
      margin-bottom: 9px;
    }

    .company {
      font-size: 16px;
      color: #0d47ff;
      font-weight: 600;
      margin-bottom: 12px;
    }

    .description {
      font-size: 16px;
      color: #38506b;
      line-height: 1.68;
      margin-bottom: 20px;
      margin-top: 6px;
    }

    .apply-btn {
      display: inline-block;
      background: #1552f7;
      color: #fff;
      padding: 12px 32px;
      border-radius: 10px;
      font-size: 15px;
      font-weight: 700;
      text-decoration: none;
      box-shadow: 0 2px 8px rgba(21,82,247,0.10);
      transition: background 0.22s, transform 0.19s;
      border: none;
      outline: none;
    }
    .apply-btn:hover {
      background: #0d1a2d;
      transform: scale(1.06);
    }

    .portals-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(225px, 1fr));
      gap: 22px;
      margin-top: 5px;
    }
    .portal-card {
      background: #fff;
      padding: 27px 18px 19px 18px;
      border-radius: 15px;
      box-shadow: 0 2px 16px rgba(9,10,80,0.07);
      border-bottom: 5px solid #1552f7;
      text-decoration: none;
      text-align: center;
      transition: box-shadow 0.25s, border-bottom 0.2s, transform 0.19s;
      cursor: pointer;
      font-size: 20px;
    }
    .portal-card:hover, .portal-card:focus {
      box-shadow: 0 10px 32px rgba(8,30,120,0.15);
      border-bottom: 7px solid #3b80ff;
      background: #eef7ff;
      transform: scale(1.06);
    }
    .portal-name {
      display: block;
      font-size: 20px;
      font-weight: 700;
      color: #1552f7;
      margin-bottom: 7px;
    }
    .portal-desc {
      font-size: 14px;
      color: #34465b;
      margin-top: 3px;
    }

    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(15px); }
      to { opacity: 1; transform: translateY(0); }
