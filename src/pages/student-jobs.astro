---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Student Jobs - Talent Display">
  <section class="jobs-section">
    <h1 class="title">Punë dhe intershipe</h1>
    <p class="subtitle">Gjej mundësi pune dhe internship për studentë</p>

    <div class="jobs-grid">
      <a class="job-card" target="_blank" href="https://www.duapune.com/">DuaPune</a>
      <a class="job-card" target="_blank" href="https://karriera.al/">Karriera.al</a>
      <a class="job-card" target="_blank" href="https://njoftime.com/">Njoftime.com</a>
      <a class="job-card" target="_blank" href="https://studaral.com/">StudArAl</a>
    </div>
  </section>

  <style>
  body {
    background: linear-gradient(to bottom, #eef4ff, #f7faff);
    min-height: 100vh;
    margin: 0;
  }

    /* Background i njëjtë si faqa kryesore */
    .jobs-section {
      padding: 80px 20px;
      background: linear-gradient(180deg, #ffffff00, #ebf1ff);
      text-align: center;
      animation: fadeIn 0.8s ease-in-out;
    }

    .title {
      font-size: 40px;
      font-weight: 800;
      color: #0d1a2d;
      margin-bottom: 10px;
    }

    .subtitle {
      font-size: 20px;
      color: #4a5568;
      margin-bottom: 40px;
    }

    .jobs-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
      gap: 30px;
      max-width: 900px;
      margin: 0 auto;
    }

    /* BOX STYLE ME GLOW + ANIMACION */
    .job-card {
      background: #ffffff;
      padding: 22px;
      border-radius: 18px;
      box-shadow: 0 4px 16px rgba(0, 0, 0, 0.05);
      border: 1px solid #e8ecff;
      font-size: 20px;
      font-weight: 600;
      color: #0d47ff;
      transition: 0.25s ease;
      transform: translateY(0);
    }

    .job-card:hover {
      transform: translateY(-6px) scale(1.03);
      box-shadow: 0 10px 25px rgba(0, 72, 255, 0.25);
      border-color: #4d7cff;
    }

    /* Fade-in animation */
    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(20px); }
      to { opacity: 1; transform: translateY(0); }
    }

  </style>
</Layout>
