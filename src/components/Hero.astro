---
import { siteConfig } from "../config";
---

<section
  id="hero"
  class="min-h-screen flex flex-col items-center justify-center text-center px-6 pt-32 pb-20 
         bg-gradient-to-b from-white via-gray-50 to-gray-100"
>

  <!-- Animacion i butë -->
  <div class="animate-fade-in-up space-y-6 max-w-3xl">
    
    <h1 class="text-4xl md:text-6xl font-extrabold text-gray-900 leading-tight">
      Mirësevini në <span class="text-blue-600">Talent Display</span>
    </h1>

    <p class="text-lg md:text-xl text-gray-600 font-light">
      Platforma ku talenti juaj shndërrohet në një prezantim profesional, modern
      dhe të personalizuar. Ndërto profilin tënd dhe shfaqu me stil.
    </p>

    <!-- Butonat -->
    <div class="flex gap-4 justify-center mt-6">
      <a
        href="#about"
        class="px-8 py-3 rounded-xl bg-blue-600 text-white font-medium shadow-lg hover:shadow-xl 
               hover:bg-blue-700 transition-all duration-300"
      >
        Fillo Tani
      </a>

      <a
        href="#projects"
        class="px-8 py-3 rounded-xl border border-gray-300 text-gray-800 font-medium 
               hover:border-gray-400 hover:bg-gray-100 transition-all duration-300"
      >
        Shiko Shembujt
      </a>
    </div>
  </div>
</section>

<style>
  @keyframes fade-in-up {
    0% {
      opacity: 0;
      transform: translateY(20px);
    }
    100% {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in-up {
    animation: fade-in-up 0.8s ease forwards;
  }
</style>
