---
const projektetSherbime = [
  {
    name: "Erasmus+",
    description: "Programi ndërkombëtar për shkëmbime, trajnime dhe mobilizim studentor në Bashkimin Evropian. Ofron bursa, mobilitet, eksperienca kulturore dhe zhvillim profesional për studentët shqiptarë.",
    link: "https://ec.europa.eu/programmes/erasmus-plus/",
    skills: ["Shkëmbim", "Mobilitet", "Bursa"]
  },
  {
    name: "YEEP (Youth Employment Promotion Project)",
    description: "Projekt për aftësim profesional, praktikë dhe punësim për të rinjtë në Shqipëri. Ofron kurse, trajnim, mentorim dhe lidhje me punëdhënës.",
    link: "https://www.yeep.al/",
    skills: ["Punësim", "Mentorim", "Praktikë"]
  },
  {
    name: "Albanian Student Startups",
    description: "Program për nxitjen e inovacionit, zhvillim idesh dhe mbështetje për startup-et e studentëve shqiptarë. Përfshin financim, trajnime dhe rrjetëzim me ekspertë.",
    link: "https://www.studentstartup.al/",
    skills: ["Startup", "Financim", "Inovacion"]
  },
  {
    name: "Youth in Action",
    description: "Projekte për lidership, vullnetarizëm dhe angazhim social, me bashkëpunime ndërkombëtare. Mundësi për të marrë pjesë në seminare dhe vizita studimore.",
    link: "https://www.yia.al/",
    skills: ["Vullnetarizëm", "Lidership", "Bashkëpunim"]
  },
  {
    name: "Digital Skills for Students",
    description: "Trajnime falas për aftësi dixhitale, kodim, dizajn grafik dhe përdorim të mjeteve IT, të dedikuara për të rinj në universitet.",
    link: "https://www.digitalskills.al/",
    skills: ["Kodim", "Dizajn", "IT"]
  }
];

const accentColor = "#027aff";
---

<section id="projects" class="p-8 sm:p-12 md:p-16 lg:p-24 bg-white">
  <div>
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-16 items-start">
      <div class="lg:col-span-4">
        <h2 class="text-3xl sm:text-4xl md:text-5xl xl:text-7xl font-bold text-gray-900">
          Projekte
        </h2>
        <div
          style={`background-color: ${accentColor};`}
          class="w-[75px] h-[5px] mt-2 rounded-full"
        ></div>
      </div>
      <div class="lg:col-span-8">
        <div class="space-y-8">
          {projektetSherbime.map((project, index) => (
            <div class="group relative">
              <a
                href={project.link}
                target="_blank"
                rel="noopener noreferrer"
                class="block relative p-4 sm:p-6 md:p-8 bg-gray-50 rounded-xl sm:rounded-2xl border border-gray-200 transition-all duration-300 hover:bg-white hover:shadow-xl hover:border-gray-300 hover:-translate-y-1"
              >
                <div class="absolute top-4 right-4 sm:top-6 sm:right-6 md:top-8 md:right-8 w-10 h-10 sm:w-11 sm:h-11 md:w-12 md:h-12 flex items-center justify-center bg-blue-900 rounded-full text-white transition-all duration-300 group-hover:bg-blue-700">
                  <svg
                    class="w-5 h-5"
                    stroke="currentColor"
                    fill="none"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M7 17L17 7M17 7H7M17 7V17"
                    />
                  </svg>
                </div>
                <div class="space-y-4">
                  <span
                    class="text-sm font-mono"
                    style={`color: ${accentColor};`}
                  >
                    0{index + 1}
                  </span>
                  <h3 class="text-xl sm:text-2xl font-bold text-gray-900 mt-1">
                    {project.name}
                  </h3>
                  <p class="text-base sm:text-lg text-gray-600 leading-relaxed pr-12 sm:pr-14 md:pr-16">
                    {project.description}
                  </p>
                  <div class="flex flex-wrap gap-1.5 sm:gap-2 pt-2">
                    {project.skills.map(skill => (
                      <span class="px-2.5 sm:px-3 py-1 sm:py-1.5 bg-blue-900 text-white rounded-md sm:rounded-lg text-xs sm:text-sm font-medium transition-all duration-300 group-hover:bg-blue-800">
                        {skill}
                      </span>
                    ))}
                  </div>
                </div>
              </a>
            </div>
          ))}
        </div>
      </div>
    </div>
  </div>
</section>
