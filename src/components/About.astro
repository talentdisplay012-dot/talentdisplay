---
import Layout from '../layouts/Layout.astro';

const sponsors = [
  {
    name: "SOS Kinderdörfer Weltweit",
    description: "Organizatë ndërkombëtare që mbështet të rinjtë dhe komunitetin",
    link: "https://www.sos-kinderdoerfer.de/"
  },
  {
    name: "German Cooperation (Deutsche Zusammenarbeit)",
    description: "Bashkëpunimi gjerman për zhvillim dhe rritje të komunitetit",
    link: "https://www.giz.de/"
  },
  {
    name: "YEEP (Youth Empowerment Enabling Prospects)",
    description: "Program për aftësim dhe punësim të të rinjve në Shqipëri",
    link: "https://www.yeep.al/"
  },
  {
    name: "SOS Fshatra të Fëmijësh Shqipëri",
    description: "Organizatë që merret me mirëqenien e fëmijëve në Shqipëri",
    link: "https://www.sos-shqiperi.al/"
  }
];
---

<Layout title="Rreth Nesh - Talent Display">
  <section class="about-section" id="about">
    <div class="about-container">
      <div class="about-header">
        <h1 class="about-title">Rreth Nesh</h1>
        <div class="accent-line"></div>
      </div>
      
      <div class="about-content">
        <div class="about-text">
          <h2>Talent Display - Për të Rinj, Nga të Rinj</h2>
          <p>
            <strong>Talent Display</strong> është një projekt i iniciuar <strong>nga të rinj për të rinj</strong>, 
            me synimin të ndihmojë studentët shqiptarë, veçanërisht në <strong>rajonin e Lezhës</strong>, 
            të ndërtojnë profilin profesional dhe të gjenë mundësi punësimi. Përmes mjeteve tona, ju ndihmohen 
            të ndërtoni një CV profesional, të prezantoni punën përmes portfolio moderne, dhe të merrni këshilla 
            personalizuara për karrierën. Ky projekt nuk do të ishte i mundur pa mbështetjen e organizatave partnere 
            të mëposhtme, të cilëve u jemi shumë mirënjohës për mundësimin e rritjes dhe zhvillimit të Lezhës.
          </p>

          <h3 class="sponsors-title">Partnerë dhe Sponsor</h3>
        </div>
      </div>

      <div class="sponsors-grid">
        {sponsors.map((sponsor, idx) => (
          <a href={sponsor.link} target="_blank" rel="noopener noreferrer" class="sponsor-card">
            <div class="sponsor-number">0{idx + 1}</div>
            <h3 class="sponsor-name">{sponsor.name}</h3>
            <p class="sponsor-desc">{sponsor.description}</p>
            <span class="sponsor-link">Vizito →</span>
          </a>
        ))}
      </div>
    </div>
  </section>

  <style>
    .about-section {
      min-height: auto;
      padding: 80px 20px 60px 20px;
      background: linear-gradient(to bottom, #eef4ff 0%, #ffffff 100%);
    }

    .about-container {
      max-width: 1200px;
      margin: 0 auto;
    }

    .about-header {
      display: flex;
      flex-direction: column;
      align-items: flex-start;
      margin-bottom: 60px;
      animation: slideInDown 0.6s ease-out;
    }

    .about-title {
      font-size: 56px;
      font-weight: 900;
      color: #0d1a2d;
      margin: 0;
      margin-bottom: 12px;
      letter-spacing: -1px;
      text-align: left;
    }

    .accent-line {
      width: 75px;
      height: 5px;
      background: linear-gradient(90deg, #0d47ff, #3b82ff);
      border-radius: 3px;
      animation: expandWidth 0.8s ease-out 0.2s both;
    }

    @keyframes slideInDown {
      from {
        opacity: 0;
        transform: translateY(-20px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    @keyframes expandWidth {
      from {
        width: 0;
      }
      to {
        width: 75px;
      }
    }

    .about-content {
      margin-bottom: 80px;
      animation: fadeIn 0.6s ease-out 0.3s both;
    }

    @keyframes fadeIn {
      from {
        opacity: 0;
      }
      to {
        opacity: 1;
      }
    }

    .about-text {
      background: #ffffff;
      padding: 40px;
      border-radius: 20px;
      box-shadow: 0 4px 20px rgba(13, 71, 255, 0.08);
      border: 1px solid #e8ecff;
    }

    .about-text h2 {
      font-size: 32px;
      color: #0d47ff;
      margin-bottom: 24px;
      margin-top: 0;
      font-weight: 800;
    }

    .about-text p {
      font-size: 18px;
      color: #34465b;
      line-height: 1.9;
      margin: 0;
      text-align: justify;
    }

    .sponsors-title {
      font-size: 28px;
      color: #0d1a2d;
      margin-top: 40px;
      margin-bottom: 24px;
      font-weight: 700;
    }

    .sponsors-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: 28px;
      margin-bottom: 80px;
      animation: staggerIn 0.8s ease-out 0.4s both;
    }

    @keyframes staggerIn {
      from {
        opacity: 0;
        transform: translateY(20px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .sponsor-card {
      background: linear-gradient(135deg, #ffffff 0%, #f7faff 100%);
      padding: 32px 28px;
      border-radius: 18px;
      border: 1.5px solid #e8ecff;
      box-shadow: 0 4px 16px rgba(13, 71, 255, 0.06);
      text-decoration: none;
      transition: all 0.3s ease;
      display: flex;
      flex-direction: column;
      gap: 16px;
    }

    .sponsor-card:hover {
      transform: translateY(-8px);
      box-shadow: 0 12px 32px rgba(13, 71, 255, 0.15);
      border-color: #3b82ff;
      background: linear-gradient(135deg, #eef7ff 0%, #f7faff 100%);
    }

    .sponsor-number {
      font-size: 14px;
      font-weight: 700;
      color: #0d47ff;
      opacity: 0.7;
      font-family: 'Courier New', monospace;
    }

    .sponsor-name {
      font-size: 22px;
      font-weight: 800;
      color: #0d1a2d;
      margin: 0;
    }

    .sponsor-desc {
      font-size: 15px;
      color: #4a5568;
      margin: 0;
      line-height: 1.6;
      flex-grow: 1;
    }

    .sponsor-link {
      font-size: 14px;
      color: #0d47ff;
      font-weight: 600;
      transition: all 0.2s;
    }

    .sponsor-card:hover .sponsor-link {
      color: #0a38cc;
      transform: translateX(4px);
    }

    @media (max-width: 768px) {
      .about-section {
        padding: 60px 16px 40px 16px;
      }

      .about-header {
        margin-bottom: 40px;
      }

      .about-title {
        font-size: 36px;
      }

      .about-text {
        padding: 24px;
      }

      .about-text h2 {
        font-size: 24px;
      }

      .about-text p {
        font-size: 16px;
        text-align: left;
      }

      .sponsors-grid {
        grid-template-columns: 1fr;
        gap: 20px;
        margin-bottom: 60px;
      }

      .sponsor-card {
        padding: 24px;
      }
    }
  </style>
</Layout>
