---
import { siteConfig } from "../config";
---

<section id="cv-examples" class="p-8 sm:p-12 md:p-16 lg:p-24">
  <div>
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-16 items-start">
      
      <!-- Left Title Column -->
      <div class="lg:col-span-4">
        <h2 class="text-3xl sm:text-4xl md:text-5xl xl:text-7xl font-bold text-gray-900">
          CV Examples
        </h2>

        <div
          class="w-[75px] h-[5px] mt-2 rounded-full"
          style={`background-color: ${siteConfig.accentColor}`}
        />
        <p class="text-gray-600 text-lg mt-6">
          Zgjidh një model CV të gatshëm për përdorim.
        </p>
      </div>

      <!-- Right Content Column -->
      <div class="lg:col-span-8">
<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">

  <a href="https://www.canva.com/resumes/templates/" target="_blank"
    class="block bg-white rounded-xl shadow-sm border border-gray-100 p-6 hover:shadow-md transition duration-300">
    <h3 class="text-lg font-semibold text-gray-900">Canva CV Templates</h3>
  </a>

  <a href="https://resume.io/" target="_blank"
    class="block bg-white rounded-xl shadow-sm border border-gray-100 p-6 hover:shadow-md transition duration-300">
    <h3 class="text-lg font-semibold text-gray-900">Resume.io</h3>
  </a>

  <a href="https://novoresume.com/resume-templates" target="_blank"
    class="block bg-white rounded-xl shadow-sm border border-gray-100 p-6 hover:shadow-md transition duration-300">
    <h3 class="text-lg font-semibold text-gray-900">NovoResume CV</h3>
  </a>

  <a href="https://www.topcv.com/resume-templates" target="_blank"
    class="block bg-white rounded-xl shadow-sm border border-gray-100 p-6 hover:shadow-md transition duration-300">
    <h3 class="text-lg font-semibold text-gray-900">TopCV Templates</h3>
  </a>

  <a href="https://zety.com/resume-templates" target="_blank"
    class="block bg-white rounded-xl shadow-sm border border-gray-100 p-6 hover:shadow-md transition duration-300">
    <h3 class="text-lg font-semibold text-gray-900">Zety CV</h3>
  </a>

  <a href="https://europass.europa.eu/en/create-europass-cv" target="_blank"
    class="block bg-white rounded-xl shadow-sm border border-gray-100 p-6 hover:shadow-md transition duration-300">
    <h3 class="text-lg font-semibold text-gray-900">Europass CV</h3>
  </a>

</div>


      </div>

    </div>
  </div>
</section>
