<style>
  .title-animate {
    animation: slideInDown 0.6s ease-out;
  }

  .accent-line {
    animation: expandWidth 0.8s ease-out 0.2s both;
  }

  .subtitle-animate {
    animation: fadeIn 0.6s ease-out 0.4s both;
  }

  @keyframes slideInDown {
    from {
      opacity: 0;
      transform: translateY(-20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes expandWidth {
    from {
      width: 0;
    }
    to {
      width: 75px;
    }
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  .cv-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
    gap: 20px;
  }

  .cv-card {
    background: linear-gradient(135deg, #ffffff 0%, #f9faff 100%);
    border: 1.5px solid #e5e9ff;
    border-radius: 16px;
    padding: 28px 24px;
    text-decoration: none;
    transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
    position: relative;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    gap: 12px;
    animation: cardPop 0.5s ease-out forwards;
    opacity: 0;
    box-shadow: 0 2px 8px rgba(13, 71, 255, 0.05);
  }

  @keyframes cardPop {
    from {
      opacity: 0;
      transform: scale(0.95) translateY(15px);
    }
    to {
      opacity: 1;
      transform: scale(1) translateY(0);
    }
  }

  .cv-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent);
    transition: left 0.5s;
  }

  .cv-card:hover::before {
    left: 100%;
  }

  .cv-card:hover {
    transform: translateY(-6px) scale(1.03);
    box-shadow: 0 12px 32px rgba(13, 71, 255, 0.18);
    border-color: #3b82ff;
    background: linear-gradient(135deg, #eef7ff 0%, #f5f0ff 100%);
  }

  .cv-icon {
    font-size: 32px;
    animation: iconBounce 0.6s ease-out 0.1s both;
  }

  @keyframes iconBounce {
    0% {
      transform: scale(0.5) rotateY(-90deg);
      opacity: 0;
    }
    100% {
      transform: scale(1) rotateY(0);
      opacity: 1;
    }
  }

  .cv-title {
    font-size: 18px;
    font-weight: 700;
    color: #0d1a2d;
    margin: 0;
    transition: color 0.3s;
  }

  .cv-card:hover .cv-title {
    color: #0d47ff;
  }

  .cv-description {
    font-size: 14px;
    color: #34465b;
    margin: 0;
    line-height: 1.5;
    opacity: 0.85;
    transition: opacity 0.3s;
  }

  .cv-card:hover .cv-description {
    opacity: 1;
  }

  .cv-arrow {
    font-size: 20px;
    color: #0d47ff;
    transition: all 0.3s;
    opacity: 0;
    transform: translateX(-8px);
    margin-top: 8px;
  }

  .cv-card:hover .cv-arrow {
    opacity: 1;
    transform: translateX(4px);
  }

  @media (max-width: 768px) {
    .cv-grid {
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 16px;
    }

    .cv-card {
      padding: 20px 16px;
    }

    .cv-icon {
      font-size: 28px;
    }

    .cv-title {
      font-size: 16px;
    }

    .cv-description {
